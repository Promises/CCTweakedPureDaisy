{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "classic",
        "types": ["cc-tweaked-types",
            "lua-types/core/coroutine",
            "lua-types/core/global",
            "lua-types/core/math",
            "lua-types/core/metatable",
            "lua-types/core/modules",
            "lua-types/core/string",
            "lua-types/core/table",
            "lua-types/core/os",
            "lua-types/special/5.3"
        ],
        "lib": [
            "es6"
        ],
        "plugins": [
            {
                "transform": "war3-transformer"
            }
        ],
        "typeRoots": [
            "node_modules/@types",
            "node_modules/lua-types",
            "node_modules/cc-tweaked-types"
        ],
        "rootDir": "src/",
        "outDir": "dist"
    },
    "include": [
        "src"
    ],
    "exclude": [],
    "tstl": {
        "luaTarget": "5.3",
        "luaLibImport": "require",
        "noImplicitSelf": true,
        "luaBundle": "dist/tstl_output.lua",
        "luaBundleEntry": "./src/main.ts"
    }
  }
